# Session Security (CRITICAL for Production)
# Generate a secure random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER use the default value in production!
SESSION_SECRET=your-secure-session-secret-change-in-production

# CSRF Protection (Optional - auto-generated if not set)
# Generate a secure random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CSRF_SECRET=your-secure-csrf-secret-here

# Admin Credentials
# Set these in production (Railway, etc.)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YourSecureP@ssw0rd123

# Database Connection
# Automatically provided by Railway when you add PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database

# Testing Mode (Local Development Only)
# SECURITY WARNING: Only use this for local testing with simple passwords
# NEVER enable this in production!
# Uncomment the line below to allow any password (including "admin", "123", etc.)
# DISABLE_PASSWORD_VALIDATION=true

# Node Environment
# Automatically set by deployment platforms
# NODE_ENV=production
